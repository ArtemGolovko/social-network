{% extends 'base_content.html.twig' %}

{% block content %}
<div class="profileBlock">
    <div class="profileHeader">
        <div class="profileBgImage" style="background: #ff6400; background-size: cover;"></div>
        <div class="profileIcon" style="background-image: url({{ asset(app.user.avatarUrl) }}); background-size: cover;"></div>
        <div class="profileButtons">
            <button class="editProfileBtn"><span id="subscribeLabel"><i class="fas fa-pen"></i> РЕДАКТИРОВАТЬ</span></button>
        </div>
    </div>
    <div class="profileInfo">
        <div class="profileBio">
            <div class="profileUsername">{{ app.user.name }} <i class="fas fa-check-circle verifyIcon"></i></div>
            <div class="profileNickname">@{{ app.user.username }}</div>
        </div>
        <div class="profileDesc">profileDesc</div>
        <div class="profileStats">
            <span class="stat">0 подписчиков</span>
            <span class="stat">{{ app.user.posts|length }} постов</span>
            <span class="stat">0 подписок</span>
        </div>
    </div>
</div>
{{ include('partial/make_post_block.html.twig') }}
{% for post in app.user.posts %}
    {% include 'partial/render_post.html.twig' with {'post': post} %}
{% endfor %}
{% endblock %}