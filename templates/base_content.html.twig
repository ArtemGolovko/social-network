{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="{{ asset('js/script.js') }}"></script>
    <script>function exit()
        {
            var url = document.getElementById('exitButton');
            document.location.href = "{{ path('app_logout') }}";
        }</script>
{% endblock %}

{% block body %}
<header>
    <div class="container_header">
        <div class="header_inner">
            <div class="header_left">
                <div class="logo">
                    <a href="index.html"><img src="{{ asset('img/logo_header.png') }}" alt=""></a>
                </div>
                <div class="searchBox">
                    <i class="fas fa-search"></i>
                    <input class="mainSearch" placeholder="Поиск" type="text">
                </div>
                <button class="notificationIcon"><i class="fas fa-bell"></i><div class="round"></div></button>
            </div>
            <div class="notificationList">
                <div class="notification">
                    <div class="notificationUser">
                        <div class="postIcon" style="background-image: url({{ asset('img/user.png') }}); background-size: cover; width: 30px; height: 30px;"></div>
                        <div class="postUserInfo">
                            <div class="postUsername" style="font-size: 15px;">notificationUsername</div>
                            <div class="postTime" style="font-size: 12px;">notificationTime</div>
                        </div>
                    </div>
                    <p class="notificationDesc" style="font-size: 12px;">notificationDesc</p>
                </div>
            </div>
            <div class="header_right">
                <div class="userIcon">
                    <span>username <i class="fas fa-check-circle verifyIcon"></i></span>
                    <div class="headerIcon" style="background-image: url({{ asset('img/user.png') }}); background-size: cover;"></div>
                </div>
                <div class="profileMenuHeader">
                    <button><i class="fas fa-user"></i> Мой аккаунт</button>
                    <button onclick="exit()" id="exitButton"><i class="fas fa-sign-out-alt"></i> Выйти из аккаунта</button>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="content">
        <div class="userPanel">
            <div class="upLabel"><i class="fas fa-home" style="color: rgb(255, 136, 0);"></i><a href="#" style="color: rgb(255, 136, 0); font-weight: 700;">Главная</a></div>
            <div class="upLabel"><i class="fas fa-search"></i><a href="#">Поиск</a></div>
            <div class="upLabel"><i class="fas fa-comments"></i><a href="#">Сообщения</a></div>
            <div class="upLabel"><i class="fas fa-star"></i><a href="#">Избранное</a></div>
            <div class="upLabel"><i class="fas fa-user-plus"></i><a href="#">Подписки</a></div>
            <div class="upLabel"><i class="fas fa-cog"></i><a href="#">Настройки</a></div>
        </div>
        <div class="mainContent">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}